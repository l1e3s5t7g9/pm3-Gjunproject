<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/order_itemId"
        android:layout_width="0dp"
        android:layout_weight="0"
        android:hint=""
        android:layout_height="0dp"
        android:textSize="18sp"
        android:layout_marginRight="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/order_itemSubscriber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="訂購者"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/order_itemGoods"
        android:layout_width="wrap_content"
        android:hint="商品"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/order_itemId" />
    <TextView
        android:id="@+id/order_itemprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="單價"
        android:textSize="18sp"
        android:gravity="right"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/order_item數量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="數量"
        android:textSize="18sp"
        android:gravity="right"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/order_itemprice"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/order_item總價"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="總價"
        android:textSize="18sp"
        android:gravity="right"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/order_item數量"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/order_itemCommente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="註解"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/order_itemSubscriber"
        app:layout_constraintRight_toLeftOf="@+id/order_itemGoods"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="備註："
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/order_itemSubscriber"
        app:layout_constraintTop_toBottomOf="@+id/order_itemSubscriber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="數量："
        android:id="@+id/textView9"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:text="總價："
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/order_itemGoods"
        app:layout_constraintTop_toBottomOf="@+id/order_itemGoods"
        android:text="單價：" />
</android.support.constraint.ConstraintLayout>